<style>
  :root{
    --bg:#06060a;
    --card:#0f1720;
    --accent:#7c4dff;
    --muted:#cbd5e1;
  }
  body{
    background:linear-gradient(180deg,var(--bg), #031021);
    color:#f8fafc;
    font-family:Inter,system-ui;
    padding:2rem;
  }
  .card{
    background:rgba(255,255,255,0.04);
    border:1px solid rgba(255,255,255,0.08);
    border-radius:12px;
    padding:1.25rem;
    max-width:900px;
    margin:auto;
    text-align:center;
  }
  .muted{ color:var(--muted); }
  pre{
    text-align:left;
    background:rgba(255,255,255,0.06);
    padding:1rem;
    border-radius:8px;
    overflow:auto;
    font-size:0.9rem;
    color:#e2e8f0;
  }
  img{
    max-width:100%;
    border-radius:10px;
    box-shadow:0 8px 30px rgba(0,0,0,0.5);
  }
</style>

<a href="/dashboard" style="text-decoration:none;color:#a5b4fc">← Back to Store</a>

<div class="card mt-4">
  <h3>Fetched Content Preview</h3>

  {{#if flag}}
    <div class="alert alert-success mt-3">
      🏁 <b>FLAG:</b> {{flag}}
    </div>
  {{/if}}

  {{#if image}}
    <div class="mt-4">
      <img src="{{image}}" alt="Fetched image" />
      <p class="muted mt-2">📸 Rendered from remote URL (image/*)</p>
    </div>
  {{else if result}}
    <pre>{{result}}</pre>
  {{else if error}}
    <div style="color:#ff6b6b">{{error}}</div>
  {{else}}
    <div class="muted">🔍 Use ?url=... to fetch remote content</div>
  {{/if}}
</div>
