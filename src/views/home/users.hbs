<style>
  :root {
    --bg: #06060a;
    --muted: #cbd5e1;
    --accent: #7c4dff;
  }

  body {
    background: linear-gradient(180deg, var(--bg), #031021);
    color: #f8fafc;
    font-family: Inter, system-ui;
  }

  .container { padding-top: 2.25rem; padding-bottom: 2.25rem; }

  .card {
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    color: #f1f5f9;
  }

  .muted { color: var(--muted); }
  .avatar {
    width: 100px; height: 100px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid rgba(124, 77, 255, 0.3);
  }

  dt { color: #f1f5f9; font-weight: 600; }
  dd { color: #e2e8f0; }

  .alert {
    border-radius: 8px;
    padding: 0.75rem 1rem;
    font-size: 0.9rem;
    margin-top: 1rem;
  }

  .alert-warning {
    background: rgba(255,193,7,0.1);
    border: 1px solid rgba(255,193,7,0.3);
    color: #ffca2c;
  }

  .alert-success {
    background: rgba(25,135,84,0.1);
    border: 1px solid rgba(25,135,84,0.3);
    color: #66ff99;
  }

  .badge {
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
</style>

{{> header}}

<div class="container">
  <h4>{{#if warning}}User Profile{{else}}My Profile{{/if}}</h4>
  <p class="muted">Th√¥ng tin c√° nh√¢n c·ªßa user hi·ªán t·∫°i.</p>

  {{#if warning}}
    <div class="alert alert-warning">{{warning}}</div>
  {{/if}}

  {{#if flag}}
    <div class="alert alert-success">üèÅ <b>FLAG:</b> {{flag}}</div>
  {{/if}}

  <!-- Profile Card -->
  <div class="card p-4 d-flex flex-row align-items-center gap-4 mt-3">
    <img class="avatar" src="{{profile.avatar}}" alt="{{profile.username}}">
    <div>
      <h5 class="mb-1">{{profile.username}}</h5>
      <div class="muted small mb-1">{{profile.email}}</div>
      <div>
        <span class="badge bg-secondary">{{profile.role}}</span>
        {{#if (eq profile.role "admin")}}<span class="badge bg-warning text-dark ms-2">Admin</span>{{/if}}
      </div>
    </div>
  </div>

  <!-- Account Info -->
  <div class="card p-3 mt-4">
    <h6 class="mb-3">Account Details</h6>
    <dl class="row mb-0">
      <dt class="col-sm-3">User ID</dt><dd class="col-sm-9">#{{profile.userId}}</dd>
      <dt class="col-sm-3">Username</dt><dd class="col-sm-9">{{profile.username}}</dd>
      <dt class="col-sm-3">Email</dt><dd class="col-sm-9">{{profile.email}}</dd>
      <dt class="col-sm-3">Role</dt><dd class="col-sm-9">{{profile.role}}</dd>
      <dt class="col-sm-3">Balance</dt><dd class="col-sm-9">‚Ç´{{profile.balance}}</dd>
      <dt class="col-sm-3">Member Since</dt><dd class="col-sm-9">{{formatDate profile.createdAt}}</dd>
      <dt class="col-sm-3">Last Login</dt><dd class="col-sm-9">{{formatDate profile.lastLogin}}</dd>
    </dl>
  </div>

  <!-- Recent Activity (demo) -->
  <div class="card p-3 mt-4">
    <h6 class="mb-3">Recent Activity</h6>
