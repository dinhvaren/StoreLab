          <i class="bi bi-people"></i> Manage Users
        </a>
      {{else}}
        <a class="btn btn-sm btn-outline-light" href="/users/{{user._id}}">
          <i class="bi bi-person-lines-fill"></i> Profile
        </a>
      {{/if}}

